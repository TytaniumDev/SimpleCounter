<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color"
    tools:context=".SimpleCounterActivity" >

    <Button
        android:id="@+id/reset_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_touchable_size"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:textColor="@color/button_text_color"
        android:background="@drawable/transparent_button_background_selector"
        android:textSize="22sp"
        android:gravity="center"
        android:text="@string/reset" />

    <com.tywholland.simplecounter.CircularButton
        android:id="@+id/counter_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/circle_button_background_selector" >

        <TextView
            android:id="@+id/counter_button_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/button_text_color"
            android:textSize="72dp"
            tools:ignore="HardcodedText,SpUsage" />
    </com.tywholland.simplecounter.CircularButton>

</RelativeLayout>